<% if flash.present? %>
  <% flash.each do |f| %>
    <div class="alert alert-<%= bootstrap_alert_type(f.first) %> alert-dismissible fade show" role="alert">
      <strong><%= f.first.capitalize %>!</strong> <%= f.second %>
      <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
  <% end %>
<% end %>

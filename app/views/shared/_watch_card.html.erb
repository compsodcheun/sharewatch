<div class="col-3">
  <div class="card mb-4">
    <% if watch.images.first.present? %>
      <a href="#" data-toggle="modal" data-target="#image_preview<%= i %>">
        <img
          class="d-block w-100"
          src="<%= get_image_path(watch.images.first, watch, true) %>"
        >
      </a>
    <% else %>
      <table class="bg-light" style="height: 253px; width: 100%;">
          <tr>
            <td class="align-middle"><center><h2>No Image</h2></center></td>
          </tr>
        </tbody>
      </table>
    <% end %>
    <div class="card-body">
      <p class="card-text"><b><%= watch.name %></b></p>
    </div>
    <div class="card-footer">
      <%= render "#{controller_name}/shared/action", watch: watch %>
    </div>
  </div>
</div>

<div
  class="modal fade"
  id="image_preview<%= i %>"
  tabindex="-1" role="dialog"
  aria-labelledby="image_preview<%= i %>Label"
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title"><%= watch.name %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div id="carousel<%= i %>Controls" class="carousel slide" data-ride="carousel" data-interval="false">
          <div class="carousel-inner">
            <% watch.images.each_with_index do |image, index| %>
            <div class="carousel-item <%= index.eql?(0) ? 'active' : '' %>">
              <img
                class="d-block w-100"
                src="<%= get_image_path(image, watch) %>"
              >
            </div>
            <% end %>
          </div>
          <a class="carousel-control-prev" href="#carousel<%= i %>Controls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carousel<%= i %>Controls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
        <div class="modal-body">
          <%= watch.detail %>
        </div>
      </div>
    </div>
  </div>
</div>

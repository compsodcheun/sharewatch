<%= form_for @watch do |form| %>
<div class: 'form-row'>
  <div class="col-6">
    <h2>
      <%= title %>
    </h2>

    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, class: 'form-control', placeholder: 'Watch name' %>
    </div>

    <div class="form-group">
      <%= form.label :detail %>
      <%= text_area :watch, :detail, rows: 4, class: 'form-control', placeholder: 'Detail about your watch.' %>
    </div>

    <div class="form-group">
      <%= form.label :images %> <br>
      <%= form.file_field :images, :accept => 'image/jpeg', :multiple => true %>
    </div>

    <%= form.submit action, class: 'btn btn-outline-success' %>
  </div>
</div>
<% end %>

<div class="row">
  <div class="col-12">
    <div class="card">
      <div class="card-body">
        <h2><b>Sign up</b></h2>

        <div class="text-danger">
          <%= devise_error_messages! %>
        </div>

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

          <div class="form-group">
            <div class="field">
              <%= f.label :name %>
              <%= f.text_field :name,
                autofocus: true,
                autocomplete: "name",
                class: "form-control",
                placeholder: "Name"
              %>
            </div>
          </div>

          <div class="form-group">
            <div class="field">
              <%= f.label :email %>
              <%= f.email_field :email,
                autofocus: true,
                autocomplete: "email",
                class: "form-control",
                placeholder: "Email@example.com"
              %>
            </div>
          </div>

          <div class="form-group">
            <div class="field">
              <%= f.label :password %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %>
              <%= f.password_field :password,
                autocomplete: "off",
                class: "form-control",
                placeholder: "Password"
              %>
            </div>
          </div>

          <div class="form-group">
            <div class="field">
              <%= f.label :password_confirmation %>
              <%= f.password_field :password_confirmation,
                autocomplete: "off",
                class: "form-control",
                placeholder: "Password"
              %>
            </div>
          </div>

          <div class="actions">
            <%= button_tag(type: "submit", class: "btn btn-outline-success") do %>
              <i class="fas fa-sign-up-alt"></i> Sign up
            <% end %>
          </div>
        <% end %>
        <br>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
